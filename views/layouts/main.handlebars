        <a href="/logout" class="btn btn-danger">Log Out</a>
      {{/if}}
    </nav>
    {{{body}}}
    <footer>&copy; Moojig Chimid 2022</footer>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.0/showdown.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
    ></script>
    <script src="/assets/js/index.js"></script>
    <script>
      const footer = document.querySelector('footer'); footer.innerHTML =
      `&copy; Moojig Chimid ${new Date().getFullYear()}`; // Adjust footer based
      on document body height function adjFooter() { if (window.innerHeight >
      $('body').height()) $('footer').attr('style', 'position: fixed; bottom: 0;
      width: 100%;') else { $('footer').removeAttr('style');
      $('footer').attr('style', 'position: unset'); } } adjFooter();
    </script>
  </body>

